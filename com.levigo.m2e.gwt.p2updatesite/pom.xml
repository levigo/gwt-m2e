					<execution>
						<id>copy-repository</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<copy todir="${basedir}/../updateSite/${project.version}">
									<fileset dir="${project.build.directory}/repository" />
								</copy>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
